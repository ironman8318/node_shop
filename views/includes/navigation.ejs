<header class="header">
        <nav class="header__nav">
                <input id="check" type="checkbox" class="nav__checkbox">
                <label style="margin-left:-2rem" for="check" class="hamburger">
                        <div></div>
                        <div></div>
                        <div></div>
                </label>
                <ul class="header__list">
                        <li class="header__list-item"><a class="header__list-link <%=path=='/'?'active':'' %>"
                                        href="/">Shop</a>
                        </li>
                        <li class="header__list-item"><a class="header__list-link <%=path=='/products'?'active':'' %>"
                                        href="/products">Products</a>
                        </li>
                        <% if(isLoggedIn) { %>
                        <li class="header__list-item"><a class="header__list-link <%=path=='/cart'?'active':'' %>"
                                        href="/cart">Cart</a>
                        </li>
                        <li class="header__list-item"><a
