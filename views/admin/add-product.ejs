<%- include("../includes/header.ejs") %>

<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/items.css">
<title>Document</title>
</head>

<body>
    <%- include("../includes/navigation.ejs") %>


    <main>
        <form action="/admin/product" method="POST" class="form">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="input__group">
                <label for="" class="title">Title</label>
                <input type="text" name="title">
            </div>
            <div class="input__group">
                <label for="" class="title">Price</label>
                <input type="number" name="price">
            </div>
            <div class="input__group">
                <label for="" class="title">Description</label>
                <textarea rows="6" cols="25" name="description"></textarea>
            </div>
            <div class="input__group">
                <label for="" class="title">Image URL</label>
                <input type="text" name="imageUrl">
            </div>

            <button type="submit" class="btn btn--edit">Add Product</button>
        </form>
    </main>
    <%- include("../includes/end.ejs") %>