<%- include("../includes/header.ejs") %>

<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/items.css">
<title>Document</title>
</head>

<body>
    <%- include("../includes/navigation.ejs") %>


    <main>
        <form action="/admin/<%= edit?'edit-product':'add-product' %>" method="POST" class="form">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <input type="hidden" name="id" value="<%= edit?product._id:'' %>">
            <div class="input__group">
                <label for="" class="title">Title</label>
                <input type="text" name="title" value="<%= edit?product.title:'' %>">
            </div>
            <div class="input__group">
                <label for="" class="title">Price</label>
                <input type="number" name="price" value="<%= edit?product.price:'' %>">
            </div>
            <div class="input__group">
                <label for="" class="title">Description</label>
                <textarea rows="6" cols="25" name="description"><%= edit?product.description:'' %></textarea>
            </div>
            <div class="input__group">
                <label for="" class="title">Image</label>
                <input type="file" name="image" value="<%= edit?product.imageUrl:'' %>">
            </div>

            <button type="submit" class="btn btn--edit"><%= edit?"Edit Product":"Add Product" %></button>
        </form>
    </main>
    <%- include("../includes/end.ejs") %>